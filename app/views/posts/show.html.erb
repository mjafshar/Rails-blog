<div class="container">
  <%= link_to "Home", posts_path %>
  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>
  <%= link_to "Edit", edit_user_post_path(@user, @post) %>
  <%= link_to "Delete", user_post_path(@user, @post), method: :delete, data: {confirm: "Are you sure?"} %>

  <h3>Comments</h3>
  <%= render @post.comments %>

  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
</div>
